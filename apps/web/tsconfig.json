{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "react-jsx",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"],
      "@packages/observability/src/*": ["../../packages/observability/src/*"],
      "@packages/tests/src/*": ["../../packages/tests/src/*"],
      "@packages/shared/src/*": ["../../packages/shared/src/*"],
      "@packages/errors/src/*": ["../../packages/errors/src/*"],
      "@contracts/src/*": ["../../contracts/src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    ".next/dev/types/**/*.ts",
    "**/*.mts",
    "next.config.mjs",
    "../../contracts/src/**/*.ts",
    "../../packages/observability/src/**/*.ts",
    "../../packages/tests/src/**/*.ts",
    "../../packages/errors/src/**/*.ts",
    "../../packages/shared/src/**/*.ts",
    ".next/dev/dev/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
